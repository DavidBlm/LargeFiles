package ba.intersection;

//TODO: x = (n-1)n/2
component CollisionToStop<N1 n = 2,N1 x = 1>{
    ports in B collisionIn[x],
          in B aIsFasterIn[x],
          in B active,
          out B stopOut[n];

    implementation Math{
        Z^{n,1} counter;
        Z^{x,1} indexLookup;
        for i = 1:n
            counter(i,1) = 0;
        end

        Z k = 1;
        Z maxI = n - 1;
        for i = 1:maxI
            Z minJ = i + 1;
            for j = minJ:n
                counter(i,1) = counter(i,1) + 1;
                counter(j,1) = counter(j,1) + 1;
                //always stop the last one to arrive at the collision point
                if aIsFasterIn(k)
                    indexLookup(k,1) = j;
                else
                    indexLookup(k,1) = i;
                end
                k = k + 1;
            end
        end


        for i = 1:n
            stopOut(i) = False;
        end

        if active
            for i = 1:x
                if collisionIn(i)
                    Z curIndex = indexLookup(i,1);
                    stopOut(curIndex) = True;
                end
            end
        end

    }

}