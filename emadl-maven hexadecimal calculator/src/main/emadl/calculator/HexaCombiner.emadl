package calculator;

component DigitCombiner{
    ports
            in Z(0x0:0xF) hundreds,
            in Z(0x0:0xF) tens,
            in Z(0x0:0xF) ones,
            out Z(0x0:0xFFF) number;

    implementation Math{
        number = ones + 0x10 * tens + 0x100 * hundreds;
    }
}
